#!/bin/rc

v=v4man

mkdir -p pdf_$v


ap=`{pwd}^/$v
pp=`{pwd}^/pdf_$v
owd=`{pwd}

cd $ap/man0/
{echo '.af % i'; cat $ap/man0/^(intro basinf toc ptx)} | troff |
	lp -d stdout | ps2pdf >$pp/man0.pdf
cd $owd

for(s in $v/man[1-8x]){
	mkdir -p pdf_$s
	echo $s
	for(p in $s/*){
		h=pdf_`{echo $p | sed 's/\.[1-8]$//
s/$/.pdf/'}
		echo $h
		cat page $v/man0/taa $p | fixv4 | fixli | fixta | troff | lp -d stdout | ps2pdf >$h
	}
}
